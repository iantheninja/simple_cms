<div class="subjects index">
  <h2>Subjects</h2>
  <%= link_to "Add new subject", new_subject_path, class: 'action new' %>

  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>#</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.position %></td>
      <td><%= subject.name.capitalize %></td>
      <td class="center"><%= subject.visible ? 'Yes' : 'No' %></td>
      <td class="center"><%= subject.pages.size %></td>
      <td class="actions">
        <%= link_to 'Show', subject_path(subject) %>
        <%= link_to 'Edit', edit_subject_path(subject) %>
        <%= link_to 'Delete', delete_subject_path(subject), data: {confirm: 'Are you sure?'} %>
      </td>
    </tr>
    <% end %>
  </table>


</div>