<%= link_to "Back to subjects list", subjects_path, class: "back-link" %>

<div class="subjects-show">
  <h2> Show Subject</h2>

  <table summary="subject detail view">
    <tr>
      <th>Name</th>
      <td><%= @subject.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @subject.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @subject.visible ? 'Yes' : 'No' %></td>
    </tr>
    <tr>
      <th>Created on</th>
      <td><%= @subject.created_at %></td>
    </tr>
    <tr>
      <th>Updated on</th>
      <td><%= @subject.updated_at %></td>
    </tr>
  </table>
  
</div>