<div class="Page delete">
  <h2>Delete Page</h2>
  <%= link_to "Pages list", pages_path, class: 'back link' %>

  <%= form_for @page, method: 'delete' do |f| %>

  <p>Are you sure you want to permanently delete this page? </p>
  <p><%= @page.name %></p>

    <div class="form-buttons">
      <%= f.submit "Delete page" %>
    </div>
  <% end %>
  
</div>