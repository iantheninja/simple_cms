<div class="Pages index">
  <h2>Pages</h2>
  <%= link_to "Add new page", 'new_page_path', class: 'action new' %>

  <table class="listing" summary="Pages list">
    <tr class="header">
      <th>#</th>
      <th>Page</th>
      <th>Subject</th>
      <th>Name</th>
      <th>Permalink</th>
      <th>Visible</th>
    </tr>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.position %></td>
      <td><%= page.name %></td>
      <td><%= page.subject.name %></td>
      <td><%= page.name.capitalize %></td>
      <td><%= page.permalink %></td>
      <td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
      <td class="actions">
        <%= link_to 'Show', page_path(page) %>
        <%= link_to 'Edit', edit_page_path(page) %>
        <%= link_to 'Delete', delete_page_path(page) %>
      </td>
    </tr>
    <% end %>
  </table>


</div>