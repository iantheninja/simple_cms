<%= link_to "Back to pages list", pages_path, class: "back-link" %>

<div class="pages-show">
  <h2> Show Subject</h2>

  <table summary="page detail view">
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Subject</th>
      <td><%= @page.subject.name %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @page.name %></td>
    </tr>
    <tr>
      <th>Permalink</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @page.visible ? 'Yes' : 'No' %></td>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @page.content %></td>
    </tr>
    <tr>
      <th>Created on</th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th>Updated on</th>
      <td><%= @page.updated_at %></td>
    </tr>
  </table>
</div>