
<% if flash[:notice].present? %>
  <div id="flash-notice" style="border: 1px solid blue; color: red; padding: 10px">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="access index">
  <h1>Menu</h1>
  <p>You are logged in as <%= @username %> i.d number <%= @user_id %> </p>
  <p>Your language preference is set to <%= cookies[:language] %></p>
  <p><%= link_to "Log out", logout_path, method: :delete %></p>

  <ul>
    <li><%= link_to "Manage subjects", subjects_path %></li>
    <li><%= link_to "Manage pages", pages_path %></li>
  </ul>
</div>